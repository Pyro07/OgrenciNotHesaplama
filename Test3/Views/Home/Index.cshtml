@using Test3.Models
@model IndexModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@*<h2>Index</h2>*@

@using (Html.BeginForm("OgrenciKaydet", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
<div>
    <div class="form-group row">
        <label class="control-label col-sm-3">Öğrenci Adını Giriniz:</label>
        <div class="col-sm-3">
            <input class="form-control" type="text" name="ad" placeholder="Öğrencinin Adını Giriniz" />
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-3">Öğrencinin Soyadını Giriniz:</label>
        <div class="col-sm-3">
            <input class="form-control" type="text" name="soyad" placeholder="Öğrencinin Soyadını Giriniz" />
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-3">Öğrencinin Numarasını Giriniz:</label>
        <div class="col-sm-3">
            <input class="form-control" type="text" name="numara" placeholder="Öğrencinin Numarasını Giriniz" />
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-3">Ders Adını Giriniz:</label>
        <div class="col-sm-3">
            <select class="custom-select" name="ders">
                <option>Matematik</option>
                <option>Türkçe</option>
            </select>
            @*<input class="form-control" type="text" name="ders" placeholder="Ders Adını Giriniz" />*@
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-3">Öğrencinin Vize Notunu Giriniz:</label>
        <div class="col-sm-3">
            <input class="form-control" type="text" name="vize" placeholder="Öğrencinin Vize Notu" />
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-3">Öğrencinin Final Notunu Giriniz:</label>
        <div class="col-sm-3">
            <input class="form-control" type="text" name="final" placeholder="Öğrencinin Final Notu" />
        </div>
    </div>
    @*<div class="form-group row">
            <label class="control-label col-sm-3">Öğrencinin Not Ortalaması:</label>
            <div class="col-sm-3">
                <input class="form-control" type="text" name="Ortalama" readonly/>
            </div>
        </div>*@
    <div class="form-group">
        <div class="col-sm-4">
            <input type="submit" class="btn btn-primary" value="Ortalamayı Hesapla" />
        </div>
    </div>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>Öğrencinin Adı</th>
                    <th>Öğrencinin Soyadı</th>
                    <th>Öğrencinin Numarası</th>
                    <th>Ders Adı</th>
                    <th>Vize Notu</th>
                    <th>Final Notu</th>
                    <th>Ortalaması</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var _ogrenciler in Model.Ogrenciler)
                {
                <tr>
                    <td>@_ogrenciler.Ad</td>
                    <td>@_ogrenciler.Soyad</td>
                    <td>@_ogrenciler.Numara</td>
                    <td>@_ogrenciler.Ders</td>
                    <td>@_ogrenciler.Vize</td>
                    <td>@_ogrenciler.Final</td>
                    <td>@_ogrenciler.Ortalama</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
}


